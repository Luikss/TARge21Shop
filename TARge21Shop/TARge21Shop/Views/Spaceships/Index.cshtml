@model IEnumerable<TARge21Shop.Models.Spaceship.SpaceshipIndexViewModel>

<h1>Products</h1>

<div>
    <a asp-action="add" asp-controller="spaceships" type="submit" class="btn btn-primary">Add</a>
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Passengers</th>
                <th scope="col">EnginePower</th>
            </tr>
        </thead>
        <tbody>
            @{int i = 1;}
            @foreach (var spaceship in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@spaceship.Name</td>
                    <td>@spaceship.Type</td>
                    <td>@spaceship.Passengers</td>
                    <td>@spaceship.EnginePower</td>
                    <td>
                        <a asp-action="details" asp-controller="spaceships" asp-route-id="@spaceship.Id" class="btn btn-success">Details</a>
                        <a asp-action="edit" asp-controller="spaceships" asp-route-id="@spaceship.Id" class="btn btn-primary">Edit</a>
                        <input asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceship.Id" type="submit" class="btn btn-danger" value="Delete" />
                    </td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</form>
